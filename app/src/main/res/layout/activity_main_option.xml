<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.davidpilnik.mednet.MainOption">

    <Button
        android:text="add_guardian"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/server"
        android:layout_marginTop="48dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_below="@+id/show"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorPrimary" />

    <Button
        android:text="calender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calender"
        android:layout_marginTop="45dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_below="@+id/server"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/com_facebook_button_background_color_focused_disabled" />

    <Button
        android:text="Add_medicine/meeting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Add"
        android:layout_marginTop="51dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorAccent" />

    <Button
        android:text="Show_medicine/meeting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show"
        android:layout_marginTop="45dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_below="@+id/Add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_purple" />

</RelativeLayout>